<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.PurchaseEntry"
    tools:showIn="@layout/activity_purchase_entry">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="vertical">



                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/horizontalScroll">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mainLayout2"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemIdLayout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Item ID"
                        android:imeOptions="actionNext"
                        android:id="@+id/itemId"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:maxLength="50" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/poQuantityLayout">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/poQuantity"
                        android:hint="PO Quantity"
                        android:maxLines="1"
                        android:inputType="number"
                        android:maxLength="15" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uomLayout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:imeOptions="actionNext"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/uom"
                        android:hint="UOM"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:maxLength="10" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantityReceivedLayout">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:imeOptions="actionNext"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/quantityReceived"
                            android:hint="Quantity Received"
                            android:inputType="number"
                            android:maxLength="15"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uomLayout2">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/uom2"
                            android:hint="UOM"
                            android:maxLines="1"
                            android:maxLength="10" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/balanceQuantityLayout">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:id="@+id/balanceQuantity"
                            android:paddingRight="10dp"
                            android:hint="Balance Quantity"
                            android:maxLines="1"
                            android:maxLength="15" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uomLayout3">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/uom3"
                            android:hint="UOM"
                            android:maxLines="1"
                            android:maxLength="10"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantityReceivedLayout2">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:imeOptions="actionNext"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="number"
                            android:id="@+id/quantityReceived2"
                            android:hint="Quantity Received"
                            android:maxLines="1"
                            android:maxLength="15" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/uomLayout4">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/uom4"
                            android:hint="UOM"
                            android:maxLines="1"
                            android:maxLength="10"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:layout_marginRight="50dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/invoiceNumberLayout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:imeOptions="actionDone"
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:paddingRight="10dp"
                        android:id="@+id/invoiceNumber"
                        android:hint="Invoice Number"
                        android:maxLines="1"
                        android:maxLength="15" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
