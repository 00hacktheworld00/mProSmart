<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="card"
    android:id="@+id/cardview"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:background="@color/white"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="@dimen/tab_max_width"
            android:layout_height="@dimen/half_textbox_width"
            android:layout_gravity="center"
            android:padding="@dimen/very_small_margin"
            android:hint="Enter Item ID."
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:id="@+id/text_item_id" />

        <LinearLayout
            android:layout_width="@dimen/tab_max_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/back_light"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/half_textbox_width"
                android:padding="@dimen/very_small_margin"
                android:text="Item description - "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/half_textbox_width"
                android:padding="@dimen/very_small_margin"
                android:hint="This is a sample of item description."
                android:textSize="@dimen/_12sdp"
                android:gravity="top"
                android:id="@+id/text_item_desc" />
        </LinearLayout>

        <EditText
            android:layout_width="@dimen/tab_max_width"
            android:layout_height="@dimen/half_textbox_width"
            android:layout_gravity="center"
            android:padding="@dimen/very_small_margin"
            android:hint="Enter quantity delivered."
            android:imeOptions="actionNext"
            android:inputType="number"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:maxLines="1"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:id="@+id/text_quan_delivered" />

        <EditText
            android:layout_width="@dimen/tab_max_width"
            android:layout_height="@dimen/half_textbox_width"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/very_small_margin"
            android:hint="Enter UOM."
            android:textColorHint="@color/colorPrimary"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:id="@+id/text_uom" />

        <EditText
            android:layout_width="@dimen/tab_max_width"
            android:layout_height="@dimen/half_textbox_width"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/very_small_margin"
            android:hint="Enter unit cost."
            android:textColorHint="@color/colorPrimary"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:id="@+id/text_unit_cost" />

        <EditText
            android:layout_width="@dimen/tab_max_width"
            android:layout_height="@dimen/half_textbox_width"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/very_small_margin"
            android:hint="Enter currency."
            android:textColorHint="@color/colorPrimary"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:gravity="top"
            android:id="@+id/text_currency" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:gravity="end">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/very_very_small_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/very_very_small_margin"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_borderWidth="1dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                fancy:fb_radius="@dimen/_10sdp"
                fancy:fb_defaultColor="@color/white"
                fancy:fb_focusColor="@color/fbColor"
                fancy:fb_text="Add Items"
                fancy:fb_textSize="@dimen/_12sdp"
                fancy:fb_textColor="@color/text_color"
                android:id="@+id/addBtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/subimage_main"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>

