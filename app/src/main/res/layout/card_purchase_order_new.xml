<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_margin="@dimen/very_small_margin"
    android:transitionName="card"
    android:background="@color/white"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_circle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:id="@+id/po_index" /></LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:background="@color/new_grey"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOT APPROVED"
                    android:id="@+id/text_not_approved"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/very_small_margin"
                    android:textColor="@color/fancy_red"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/main_color_grey_800"
                        android:textSize="@dimen/_15sdp"
                        android:text="#PO : "
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/main_color_grey_800"
                        android:textStyle="bold"
                        android:id="@+id/po_number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/very_very_small_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:textColor="#c0392b"
                        android:textSize="@dimen/_10sdp"
                        android:text="VENDOR CODE : "
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#c0392b"
                        android:textStyle="bold"
                        android:id="@+id/vendor_code" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/very_very_small_margin"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created On : " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/created_on" />
                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/very_very_small_margin"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created By : " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/created_by" />
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    xmlns:fancy="http://schemas.android.com/apk/res-auto">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:paddingBottom="@dimen/very_very_small_margin"
                        android:paddingLeft="@dimen/activity_vertical_margin"
                        android:paddingRight="@dimen/activity_vertical_margin"
                        android:paddingTop="@dimen/very_very_small_margin"
                        fancy:fb_borderColor="@color/colorPrimary"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_radius="@dimen/_10sdp"
                        fancy:fb_defaultColor="@color/white"
                        fancy:fb_focusColor="@color/colorPrimary"
                        fancy:fb_text="View Line Items"
                        android:layout_marginLeft="@dimen/_10sdp"
                        fancy:fb_textSize="@dimen/subheading_main"
                        fancy:fb_textColor="@color/text_color"
                        android:id="@+id/btn_items" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:paddingBottom="@dimen/very_very_small_margin"
                        android:paddingLeft="@dimen/activity_vertical_margin"
                        android:paddingRight="@dimen/activity_vertical_margin"
                        android:paddingTop="@dimen/very_very_small_margin"
                        fancy:fb_borderColor="@color/colorPrimary"
                        fancy:fb_borderWidth="1dp"
                        android:layout_alignParentRight="true"
                        fancy:fb_radius="@dimen/_10sdp"
                        fancy:fb_defaultColor="@color/white"
                        fancy:fb_focusColor="@color/colorPrimary"
                        fancy:fb_text="View Purchase Receipts"
                        fancy:fb_textSize="@dimen/subheading_main"
                        fancy:fb_textColor="@color/text_color"
                        android:id="@+id/btn_receipt" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/total_amount"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>