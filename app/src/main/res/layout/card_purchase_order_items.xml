<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:transitionName="card"
    android:background="@color/white"
    android:elevation="@dimen/_3sdp"
    tools:ignore="UnusedAttribute">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/main_layout">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Purchase Line No."
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:maxLines="1"
                                android:inputType="textCapSentences"
                                android:imeOptions="actionNext"
                                android:textColorHint="#000000"
                                android:textColor="#000000"
                                android:background="@drawable/edittext_states_red"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:textSize="15sp"
                                android:id="@+id/text_item_id"
                                android:enabled="false" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item Name"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:textColorHint="#000000"
                                android:textColor="#000000"
                                android:inputType="textCapSentences"
                                android:imeOptions="actionDone"
                                android:background="@drawable/edittext_states_red"
                                android:textSize="15sp"
                                android:id="@+id/text_item_name"
                                android:enabled="false"
                                android:gravity="top" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item Description"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:textColorHint="#000000"
                                android:textColor="#000000"
                                android:maxLines="1"
                                android:inputType="textCapSentences"
                                android:imeOptions="actionDone"
                                android:background="@drawable/edittext_states_red"
                                android:textSize="15sp"
                                android:id="@+id/text_item_desc"
                                android:enabled="false" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_3sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="UOM"
                                        android:textColor="@color/colorPrimary"/>

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:maxLines="1"
                                        android:inputType="textCapSentences"
                                        android:imeOptions="actionDone"
                                        android:background="@drawable/edittext_states_red"
                                        android:textSize="15sp"
                                        android:id="@+id/text_uom"
                                        android:enabled="false" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_3sdp">


                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Unit Cost"
                                        android:textColor="@color/colorPrimary"/>

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:maxLines="1"
                                        android:imeOptions="actionDone"
                                        android:background="@drawable/edittext_states_red"
                                        android:textSize="15sp"
                                        android:id="@+id/text_unit_cost"
                                        android:enabled="false"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                            </LinearLayout>



                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Amount"
                                android:textColor="@color/colorPrimary"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:textColorHint="#000000"
                                android:textColor="#000000"
                                android:maxLines="1"
                                android:inputType="textCapSentences"
                                android:imeOptions="actionDone"
                                android:background="@drawable/edittext_states_red"
                                android:textSize="15sp"
                                android:id="@+id/text_total_amount"
                                android:enabled="false" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/_3sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Quantity"
                                        android:textColor="@color/colorPrimary"/>

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:maxLines="1"
                                        android:inputType="textCapSentences"
                                        android:imeOptions="actionDone"
                                        android:background="@drawable/edittext_states_red"
                                        android:textSize="15sp"
                                        android:id="@+id/text_quantity"
                                        android:enabled="false" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="@dimen/_3sdp">


                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Need By Date"
                                        android:textColor="@color/colorPrimary"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:maxLines="1"
                                        android:inputType="textCapSentences"
                                        android:imeOptions="actionDone"
                                        android:background="@drawable/edittext_states_red"
                                        android:textSize="15sp"
                                        android:id="@+id/text_need_by_date"
                                        android:enabled="false" />
                                </LinearLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/editOffLayout">

                                <ImageButton
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/icon_file_edit"
                                    android:layout_alignParentStart="true"
                                    android:id="@+id/editBtn"
                                    android:layout_marginRight="@dimen/_10sdp" />

                                <ImageButton
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/icon_item_delete"
                                    android:layout_toRightOf="@+id/editBtn"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:id="@+id/deleteBtn"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/editOnLayout">

                                <ImageButton
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/success_color"
                                    android:id="@+id/editDone"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginRight="@dimen/_10sdp"/>

                                <ImageButton
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:id="@+id/editCancel"
                                    android:background="@drawable/ic_error_red"
                                    android:layout_toRightOf="@+id/editDone"
                                    android:layout_marginRight="@dimen/_10sdp"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:id="@+id/lineItemOldTotal"/>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>