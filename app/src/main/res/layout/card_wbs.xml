<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_2sdp"
        android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/click_layout"
        android:layout_margin="@dimen/very_small_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/wbs_id"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WBS Name : "
                android:textColor="@color/fbColor"
                android:gravity="center_vertical"
                android:typeface="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fbColor"
                android:gravity="center_vertical"
                android:typeface="normal"
                android:id="@+id/text_wbs_name"
                android:text="Sample Name" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:gravity="center_vertical">

                <ImageButton
                    android:layout_width="@dimen/small_logo_btn"
                    android:layout_height="@dimen/small_logo_btn"
                    android:background="@drawable/ic_check"
                    android:layout_marginEnd="@dimen/very_small_margin"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Progress : " />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_progress"
                    android:text="0" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="% completed"
                    android:id="@+id/progress_text_title" />

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:gravity="center_vertical">

                <ImageButton
                    android:layout_width="@dimen/small_logo_btn"
                    android:layout_height="@dimen/small_logo_btn"
                    android:layout_marginEnd="@dimen/very_small_margin"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total Budget : " />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_budget"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:text="0" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:id="@+id/text_currency" />

            </LinearLayout>
        </RelativeLayout>


        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW ATTACHMENTS"
            android:id="@+id/btn_attachment"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/new_grey"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/recycler_activities"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD ACTIVITY"
            android:textColor="#ffffff"
            android:id="@+id/add_activity"
            android:backgroundTint="@color/success_green"/>
        </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>



