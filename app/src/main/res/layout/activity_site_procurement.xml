<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/DrawerLayout"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:transitionName="card"
                    android:id="@+id/cardview"
                    android:layout_marginTop="@dimen/very_small_margin"
                    android:layout_marginLeft="@dimen/very_small_margin"
                    android:layout_marginRight="@dimen/very_small_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@color/white"
                    tools:ignore="UnusedAttribute">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:background="#fe5a5a"/>

                        <LinearLayout
                            android:layout_width="@dimen/logo_back"
                            android:layout_height="@dimen/logo_back"
                            android:layout_margin="@dimen/activity_horizontal_margin">

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/company_logo"
                                android:layout_width="@dimen/logo_back"
                                android:layout_height="@dimen/logo_back" /></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/small_margin">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="top">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/fbColor"
                                            android:layout_alignParentStart="true"
                                            android:gravity="center_vertical"
                                            android:typeface="normal"
                                            android:id="@+id/title"
                                            android:hint="Title" />

                                        <ImageButton
                                            android:layout_width="@dimen/small_logo_btn"
                                            android:layout_height="@dimen/small_logo_btn"
                                            android:background="@drawable/ic_sync"
                                            android:layout_alignParentRight="true"/>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Project ID - "
                                    android:layout_marginRight="@dimen/very_small_margin" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/project_id" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Created By - "
                                    android:layout_marginRight="@dimen/very_small_margin" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/created_by" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1abc9c"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:hint="Date - "
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/date"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:gravity="top" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1abc9c"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:hint="Total Budget - "
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/text_budget"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:gravity="top"
                                    android:text="0" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/text_currency"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:gravity="top"
                                    android:text="$" />
                            </LinearLayout>

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/description"
                                android:hint="Description" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transitionName="card"
                            android:id="@+id/card_add_vendors"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/very_small_margin"
                            android:focusable="true"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_marginRight="@dimen/very_small_margin"
                            android:background="@color/white">

                            <View
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="#33691E"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/card_corner_radius">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Vendors"
                                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center_vertical" />

                                <RelativeLayout
                                    android:layout_width="@dimen/logo_back"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:background="#33691E"
                                    android:gravity="center">

                                    <ImageButton
                                        android:layout_width="@dimen/heading_main"
                                        android:layout_height="@dimen/heading_main"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/white_plus"/>

                                </RelativeLayout>
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transitionName="card"
                            android:id="@+id/card_requisition"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/very_small_margin"
                            android:focusable="true"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_marginRight="@dimen/very_small_margin"
                            android:background="@color/white">

                            <View
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="#6200EA"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/card_corner_radius">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Purchase Requisition"
                                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center_vertical" />

                                <RelativeLayout
                                    android:layout_width="@dimen/logo_back"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:background="#6200EA"
                                    android:id="@+id/create_requisition"
                                    android:gravity="center">

                                    <ImageButton
                                        android:layout_width="@dimen/heading_main"
                                        android:layout_height="@dimen/heading_main"
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/create_requisition_btn"
                                        android:background="@drawable/white_plus"/>

                                </RelativeLayout>
                            </RelativeLayout>


                        </android.support.v7.widget.CardView>



                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transitionName="card"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/very_small_margin"
                            android:layout_marginRight="@dimen/very_small_margin"
                            android:id="@+id/card_purchase_orders"
                            android:focusable="true"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@color/white">

                            <View
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="#2c3e50"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/card_corner_radius"
                                android:gravity="center">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Purchase Orders"
                                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center_vertical" />

                                <RelativeLayout
                                    android:layout_width="@dimen/logo_back"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:id="@+id/create_purchase"
                                    android:background="#2c3e50"
                                    android:gravity="center">

                                    <ImageButton
                                        android:layout_width="@dimen/heading_main"
                                        android:layout_height="@dimen/heading_main"
                                        android:id="@+id/create_purchase_btn"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/white_plus"/>

                                </RelativeLayout>
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transitionName="card"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginLeft="@dimen/very_small_margin"
                            android:layout_marginRight="@dimen/very_small_margin"
                            android:focusable="true"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/card_invoice"
                            android:background="@color/white">

                            <View
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="#f1c40f"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/card_corner_radius"
                                android:gravity="center">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Invoice"
                                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center_vertical" />

                                <RelativeLayout
                                    android:layout_width="@dimen/logo_back"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:background="#f1c40f"
                                    android:id="@+id/create_invoice"
                                    android:gravity="center">

                                    <ImageButton
                                        android:layout_width="@dimen/heading_main"
                                        android:layout_height="@dimen/heading_main"
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/create_invoice_btn"
                                        android:background="@drawable/white_plus"/>

                                </RelativeLayout>
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#ffffff"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>