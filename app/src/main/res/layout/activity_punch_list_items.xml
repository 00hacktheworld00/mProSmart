<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.v4.widget.DrawerLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/DrawerLayout"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/main_layout">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/linearLayout5"
                                        android:orientation="vertical">

                                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Line No. # "
                                            android:textColor="@color/colorPrimary"/>

                                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:maxLines="1"
                                            android:inputType="textCapSentences"
                                            android:imeOptions="actionNext"
                                            android:textColorHint="#000000"
                                            android:textColor="#000000"
                                            android:background="@drawable/edittext_states_red"
                                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                                            android:textSize="15sp"
                                            android:id="@+id/text_line_no"
                                            android:enabled="false" />
                                    </LinearLayout>

                                </RelativeLayout>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_location"
                                    android:enabled="false"
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Item description"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_item_desc"
                                    android:enabled="false" />
                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Punch item type "
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionNext"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:background="@drawable/edittext_states_red"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textSize="15sp"
                                    android:id="@+id/text_punch_item_type"
                                    android:enabled="false" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Notes"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_notes"
                                    android:enabled="false" /> <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Responsible party (s)"
                                android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_resp_party"
                                    android:enabled="false"
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Priority"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_priority"
                                    android:enabled="false" /> <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status "
                                android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_status"
                                    android:enabled="false"
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Schedule to complete"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_schedule_date"
                                    android:enabled="false" />


                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date complete"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_date"
                                    android:enabled="false"
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Architect accepted"
                                    android:textColor="@color/colorPrimary"/>

                                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_architect"
                                    android:enabled="false" />

                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#ffffff"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>


    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>