<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:transitionName="card"
    android:background="@color/white"
    android:elevation="@dimen/_3sdp"
    tools:ignore="UnusedAttribute">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp">
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/main_layout">

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Line No. # "
                                    android:textColor="@color/colorPrimary"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionNext"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:background="@drawable/edittext_states_red"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textSize="15sp"
                                    android:id="@+id/text_line_no"
                                    android:enabled="false" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:padding="10dp"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionNext"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:background="@drawable/edittext_states_red"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textSize="15sp"
                                    android:id="@+id/original_line_no"
                                    android:enabled="false" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Document Type"
                                    android:textColor="@color/colorPrimary"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_doc_type"
                                    android:enabled="false"
                                    android:gravity="top" />

                                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Short Description"
                                    android:textColor="@color/colorPrimary"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/text_short_desc"
                                    android:enabled="false" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">


                                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Variation from contract"
                                            android:textColor="@color/colorPrimary"/>

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                                            android:textColorHint="#000000"
                                            android:textColor="#000000"
                                            android:maxLines="1"
                                            android:inputType="textCapSentences"
                                            android:imeOptions="actionDone"
                                            android:background="@drawable/edittext_states_red"
                                            android:textSize="15sp"
                                            android:id="@+id/text_variation"
                                            android:enabled="false" />


                                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Variation from Contract Document Description  "
                                            android:textColor="@color/colorPrimary"/>

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                                            android:textColorHint="#000000"
                                            android:textColor="#000000"
                                            android:maxLines="1"
                                            android:inputType="textCapSentences"
                                            android:imeOptions="actionDone"
                                            android:background="@drawable/edittext_states_red"
                                            android:textSize="15sp"
                                            android:enabled="false"
                                            android:id="@+id/text_variation_desc" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:layout_weight="1">

                                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Line Item Status"
                                                android:textColor="@color/colorPrimary"/>

                                            <com.weiwangcn.betterspinner.library.BetterSpinner
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="10dp"
                                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                                android:textColorHint="#000000"
                                                android:textColor="#000000"
                                                android:maxLines="1"
                                                android:inputType="textCapSentences"
                                                android:imeOptions="actionDone"
                                                android:background="@drawable/edittext_states_red"
                                                android:textSize="15sp"
                                                android:id="@+id/spinner_status"
                                                android:enabled="false" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:visibility="gone"
                                            android:layout_weight="1">

                                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Submittal Register Type"
                                                android:textColor="@color/colorPrimary"/>

                                            <com.weiwangcn.betterspinner.library.BetterSpinner
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="10dp"
                                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                                android:textColorHint="#000000"
                                                android:textColor="#000000"
                                                android:maxLines="1"
                                                android:inputType="textCapSentences"
                                                android:imeOptions="actionDone"
                                                android:background="@drawable/edittext_states_red"
                                                android:textSize="15sp"
                                                android:id="@+id/spinner_type"
                                                android:enabled="false" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EDIT"
                                    android:id="@+id/editBtn"
                                    android:backgroundTint="@color/colorPrimary"
                                    style="@style/Widget.AppCompat.Button.Colored"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="@dimen/small_margin"
                                        android:text="Attachments : "
                                        android:gravity="center" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="0"
                                        android:id="@+id/no_of_attachments"
                                        android:gravity="center" />

                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/small_margin"
                                        android:background="@drawable/add_new_button"
                                        android:id="@+id/attachBtn" />
                                </LinearLayout>


                            </LinearLayout>
                        </ScrollView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>