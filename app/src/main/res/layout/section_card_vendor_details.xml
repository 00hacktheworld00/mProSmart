<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_2sdp"
    android:id="@+id/card_vendor"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.example.sadashivsinha.mprosmart.font.HelveticaBold
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="VENDOR DETAILS"
               android:id="@+id/view2"
               android:layout_centerVertical="true"
               android:layout_alignParentStart="true" />

           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true"
               android:id="@+id/checkbox_vendor"
               android:enabled="false"/>

       </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hiddenLayoutVendorDetails"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/small_margin">

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendor Name"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Vendor Name"
                android:maxLines="1"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:background="@drawable/edittext_states_red"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/text_vendor_name"
                android:textSize="@dimen/_10sdp" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendor Type"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Vendor Type"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/spinner_ven_type" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tax ID"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Tax ID"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="1"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/text_tax_id"
                android:textSize="@dimen/_10sdp" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Licence No."
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Licence No."
                android:maxLines="1"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/text_licence_no"
                android:textSize="@dimen/_10sdp" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discipline"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>



            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Discipline"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/spinner_discipline" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Company Name"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:id="@+id/text_company_name"
                android:inputType="textCapSentences" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Currency"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/spinner_currency"
                android:layout_gravity="center_horizontal" />


            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next_vendor_details" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>