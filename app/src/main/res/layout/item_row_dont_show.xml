<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.sadashivsinha.mprosmart.font.MaterialDesignIconsTextView
            android:id="@+id/icon_social_navigation_item"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_weight="0"
            android:padding="0dp"
            android:text="@string/material_icon_account"
            android:textColor="@color/main_color_500"
            android:textSize="20dp" />

        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/rowText"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:text="Sadashiv SInha"
            android:textColor="@color/main_color_grey_800"
            android:textSize="14sp"
            app:typeface="robotoRegular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="0dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:background="@drawable/add_button" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenLayoutSite"
        android:visibility="gone"
        android:orientation="vertical">


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text1"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Purchase Receipt"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text2"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Quality Control"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text3"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Worklist"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text4"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Project Delivery"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenLayoutReport"
        android:visibility="gone"
        android:orientation="vertical">


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text01"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Purchase Receipt Report"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text02"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Purchase Order History"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text03"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Quality Reports"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenLayoutSetting"
        android:visibility="gone"
        android:orientation="vertical">


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text101"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="User Access"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text102"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="UOM"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text103"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Currency"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />


        <com.example.sadashivsinha.mprosmart.font.RobotoTextView
            android:id="@+id/list_text104"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical|end"
            android:text="Parameters"
            android:textColor="@color/main_color_grey_500"
            android:textSize="12sp"
            app:typeface="robotoRegular" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color_grey_300" />

</LinearLayout>