<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/colorAccent">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/colorAccent">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        app:cardElevation="@dimen/_25sdp"
        app:cardBackgroundColor="@color/back_light">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_3sdp"
            app:cardBackgroundColor="#fdfdfd"
            android:id="@+id/view4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Inventory"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="#000000"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item Name"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/spinner_item" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:hint="Item Description"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/item_desc"
                        android:gravity="top" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text="From Date"
                            android:maxLines="1"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:background="@drawable/edittext_states_red"
                            android:textSize="@dimen/_11sdp"
                            android:id="@+id/from_date"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_3sdp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text="To Date"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:textColorHint="#000000"
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:background="@drawable/edittext_states_red"
                            android:textSize="@dimen/_11sdp"
                            android:gravity="top"
                            android:id="@+id/to_date" /></LinearLayout>


                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIEW DETAILS"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:id="@+id/saveBtn"
                    android:background="@color/success_green"
                    style="@style/Widget.AppCompat.Button.Colored"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</LinearLayout>