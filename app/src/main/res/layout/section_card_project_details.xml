<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_2sdp"
    android:id="@+id/card_project_details"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROJECT DETAILS"
                android:id="@+id/view2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/checkbox_project_details"
                android:enabled="false"
                android:checked="false" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hiddenLayoutProjectDetails"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/small_margin">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Project Name"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/text_project_name"
                android:inputType="textCapSentences" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:padding="10dp"
                android:hint="Project Description"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="3"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/text_project_desc"
                android:inputType="textCapSentences" />

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Currency"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp"
                android:padding="10dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/spinner_currency"/>


            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next_project" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>