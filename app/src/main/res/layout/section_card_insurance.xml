<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:id="@+id/card_insurance"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INSURANCE DETAILS"
                android:id="@+id/view2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/checkbox_insurance"
                android:enabled="false"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hiddenLayoutInsurance"
            android:visibility="gone"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/small_margin">

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insurance Company"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Insurance Company"
                android:textColorHint="#000000"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/text_insurance_company"
                android:textSize="@dimen/_10sdp"
                android:inputType="textCapSentences" />


            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Policy No."
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Policy No."
                android:maxLines="1"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:background="@drawable/edittext_states_red"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/text_policy_no"
                android:textSize="@dimen/_10sdp" />


            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next_insurance" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>