<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/background_new"
    tools:context="com.example.sadashivsinha.mprosmart.Activities.LockScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.70">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_logo_layout"
            android:layout_above="@+id/text_enter_pin">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/logo_main"
                android:layout_marginLeft="@dimen/very_small_margin"
                android:layout_marginRight="@dimen/very_small_margin"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>



        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Pin"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:id="@+id/text_enter_pin"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/relativeLayout"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dot_empty"
                android:id="@+id/pin_one"
                android:layout_alignTop="@+id/pin_two"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dot_empty"
                android:id="@+id/pin_two"
                android:layout_marginLeft="@dimen/very_small_margin"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/pin_three"
                android:layout_toEndOf="@+id/pin_one" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dot_empty"
                android:id="@+id/pin_three"
                android:layout_marginLeft="@dimen/very_small_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/pin_two" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_dot_empty"
                android:id="@+id/pin_four"
                android:layout_marginLeft="@dimen/very_small_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/pin_three" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.30"
        android:background="@drawable/login_media_gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="1"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_one" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="2"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_two" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="3"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_three" />
                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="4"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_four" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="5"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_five" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="6"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_six" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="7"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_seven" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="8"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_eight" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="9"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_nine" />
                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:orientation="horizontal"
                android:weightSum="3">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="0"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_states"
                        android:id="@+id/btn_zero" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cancel"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@drawable/selectable_color_textview"
                    android:id="@+id/btn_reload"
                    android:gravity="center" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:gravity="center">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enter"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@drawable/selectable_color_textview"
                    android:id="@+id/btn_next"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
