<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.sadashivsinha.mprosmart.font.MaterialDesignIconsTextView
        android:id="@+id/icon_social_navigation_item"
        style="@style/TextViewAppearance.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_weight="0"
        android:padding="0dp"
        android:text="@string/material_icon_account"
        android:textColor="@color/main_color_500"
        android:textSize="20dp" />

    <com.example.sadashivsinha.mprosmart.font.RobotoTextView
        android:id="@+id/card_text"
        style="@style/TextViewAppearance.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0"
        android:gravity="right|center"
        android:text="Sadashiv SInha"
        android:textColor="@color/main_color_grey_800"
        android:textSize="14sp"
        app:typeface="robotoRegular" />

</LinearLayout>