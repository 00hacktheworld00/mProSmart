<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="card"
    android:id="@+id/cardview"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3">


        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#fe5a5a"/>

        <LinearLayout
            android:layout_width="@dimen/logo_back"
            android:layout_height="@dimen/logo_back"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/company_logo"
                android:layout_width="@dimen/logo_back"
                android:layout_height="@dimen/logo_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Order A"
                        android:textSize="@dimen/heading_main"
                        android:textColor="@color/fbColor"
                        android:layout_below="@+id/product_category"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:typeface="normal"
                        android:id="@+id/title"
                        android:layout_marginTop="@dimen/very_small_margin" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/very_small_margin"
                android:weightSum="2">

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Project ID : "
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:textColor="@color/new_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:textColor="@color/new_grey"
                            android:id="@+id/project_id" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Project Name : "
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:textColor="@color/new_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:textColor="@color/new_grey"
                            android:id="@+id/project_name" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Created By : "
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:textColor="@color/new_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:textColor="@color/new_grey"
                            android:id="@+id/created_by" />
                    </LinearLayout> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Date Created : "
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/new_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="26-05-2016"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/new_grey"
                        android:id="@+id/date_created" />
                </LinearLayout> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Due Date : "
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/new_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="30-06-2015"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/new_grey"
                        android:id="@+id/due_date" />
                </LinearLayout> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Status : "
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/new_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Pending"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/new_grey" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


            <ImageButton
                android:id="@+id/attachBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/small_margin"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_attach_green"
                android:layout_alignBottom="@+id/linearLayout3"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>