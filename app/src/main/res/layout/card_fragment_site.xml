<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_circle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:id="@+id/sl_no" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:background="@color/new_grey"/>
            </LinearLayout>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:id="@+id/cardview"
                android:layout_margin="@dimen/very_small_margin"
                android:transitionName="card"
                android:background="@color/white"
                tools:ignore="UnusedAttribute">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/main_color_grey_800"
                        android:id="@+id/text_notes"
                        android:text="This is a sample notes for Variation in site diary." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:textColor="@color/main_color_grey_600"
                        android:textSize="@dimen/_10sdp"
                        android:text="Added By : "
                        android:textStyle="bold" />

                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/main_color_grey_600"
                        android:textStyle="bold"
                        android:id="@+id/text_created_by"
                        android:text="USR001" />

                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/main_color_grey_600"
                        android:textSize="@dimen/_10sdp"
                        android:text=" on "
                        android:textStyle="bold" />

                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/main_color_grey_600"
                        android:textStyle="bold"
                        android:text="13/July/2016"
                        android:id="@+id/text_created_on" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>