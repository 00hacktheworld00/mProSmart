<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <android.support.v4.widget.DrawerLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/DrawerLayout"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_light"
            android:id="@+id/main_content"
            tools:context=".Activities.PunchListItems">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C5CAE9"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    xmlns:fancy="http://schemas.android.com/apk/res-auto">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:fancy="http://schemas.android.com/apk/res-auto">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Line # : "
                                    android:textColor="@color/fbColor"
                                    android:gravity="center_vertical"
                                    android:typeface="normal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/fbColor"
                                    android:gravity="center_vertical"
                                    android:typeface="normal"
                                    android:id="@+id/text_line_no" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Item ID :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_item_id" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Item description :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_item_desc" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Quantity delivered :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_quan_delivered" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="UOM :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_uom" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Unit cost :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_unit_cost" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Currency :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_currency" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Total Amount :- "
                                    android:textColor="@color/fbColor"
                                    android:textSize="@dimen/subheading_main" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/very_very_small_margin"
                                    android:textSize="@dimen/subheading_main"
                                    android:id="@+id/text_total_amount" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"
                                android:gravity="end"
                                android:orientation="horizontal">


                                <mehdi.sakout.fancybuttons.FancyButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/very_very_small_margin"
                                    android:paddingLeft="@dimen/activity_vertical_margin"
                                    android:paddingRight="@dimen/activity_vertical_margin"
                                    android:paddingTop="@dimen/very_very_small_margin"
                                    fancy:fb_borderColor="@color/colorPrimary"
                                    fancy:fb_borderWidth="1dp"
                                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                                    fancy:fb_radius="@dimen/_10sdp"
                                    fancy:fb_defaultColor="@color/white"
                                    fancy:fb_focusColor="@color/fbColor"
                                    fancy:fb_text="EDIT"
                                    fancy:fb_textSize="@dimen/subheading_main"
                                    fancy:fb_textColor="@color/text_color"
                                    android:id="@+id/editBtn" />

                            </LinearLayout>
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/hiddenTextboxLayout"
                                android:visibility="gone"
                                android:scrollbars="none">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/activity_horizontal_margin">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:src="@drawable/custom_rect"
                                            android:id="@+id/imageView" />

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:padding="@dimen/very_small_margin"
                                            android:hint="Enter item ID."
                                            android:imeOptions="actionNext"
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:textSize="@dimen/subheading_main"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:id="@+id/edit_item_id" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/activity_horizontal_margin">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:src="@drawable/custom_rect"
                                            android:id="@+id/imageView2" />

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:padding="@dimen/very_small_margin"
                                            android:hint="Enter quantity delivered."
                                            android:imeOptions="actionNext"
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:textSize="@dimen/subheading_main"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:id="@+id/edit_quan_delivered" />
                                    </RelativeLayout>



                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/activity_horizontal_margin">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:src="@drawable/custom_rect" />

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:padding="@dimen/very_small_margin"
                                            android:hint="Enter UOM."
                                            android:imeOptions="actionNext"
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:textSize="@dimen/subheading_main"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:id="@+id/edit_uom" />
                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/activity_horizontal_margin">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:src="@drawable/custom_rect" />

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:padding="@dimen/very_small_margin"
                                            android:hint="Enter unit cost."
                                            android:imeOptions="actionNext"
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:textSize="@dimen/subheading_main"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:id="@+id/edit_unit_cost" />
                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/activity_horizontal_margin">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:src="@drawable/custom_rect" />

                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/half_textbox_width"
                                            android:padding="@dimen/very_small_margin"
                                            android:hint="Enter currency."
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:imeOptions="actionDone"
                                            android:textSize="@dimen/subheading_main"
                                            android:background="@android:color/transparent"
                                            android:gravity="top"
                                            android:id="@+id/edit_currency" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginTop="@dimen/activity_vertical_margin"
                                        android:padding="@dimen/small_margin"
                                        android:background="@color/material_purple_400">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/image_main"
                                            android:text="SAVE"
                                            android:id="@+id/saveBtn"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:typeface="normal"
                                            android:layout_alignParentTop="true"/>
                                    </RelativeLayout>
                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </ScrollView>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"

            android:background="#ffffff"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>


    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>
