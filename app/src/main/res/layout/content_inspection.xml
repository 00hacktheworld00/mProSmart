<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_margin"
            android:layout_margin="@dimen/small_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <com.example.sadashivsinha.mprosmart.font.VarelaRoundRegular
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="NC Number : "
                        android:textSize="@dimen/heading_main"
                        android:textColor="@color/fbColor"
                        android:layout_below="@+id/product_category"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:typeface="normal"
                        android:id="@+id/title" />

                    <com.example.sadashivsinha.mprosmart.font.VarelaRoundRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="00141"
                        android:textSize="@dimen/heading_main"
                        android:textColor="@color/fbColor"
                        android:layout_below="@+id/product_category"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:typeface="normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.example.sadashivsinha.mprosmart.font.VarelaRoundRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project #  : "
                        android:id="@+id/descriptionOne"
                        android:textSize="@dimen/subheading_main" />

                    <com.example.sadashivsinha.mprosmart.font.VarelaRoundRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="141554"
                        android:textSize="@dimen/subheading_main" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/very_small_margin"
                    android:gravity="end">

                    <com.example.sadashivsinha.mprosmart.font.VarelaRoundRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendor ID : "
                        android:textSize="@dimen/subheading_main" />

                    <com.example.sadashivsinha.mprosmart.font.VarelaRoundRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V11021"
                        android:textSize="@dimen/subheading_main" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>