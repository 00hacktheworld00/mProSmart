<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_section_three"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_section_three_title"
            android:layout_margin="@dimen/_3sdp"
            app:cardBackgroundColor="@color/material_grey_200"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_margin"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SECTION THREE"
                        android:id="@+id/view2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hiddenLayoutSectionThree"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/small_margin"
            android:visibility="gone">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:padding="10dp"
                android:hint="Documents Impacted and Updated"
                android:maxLines="3"
                android:inputType="textCapSentences"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:background="@drawable/edittext_states_red"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/text_documents_impacted"
                android:textSize="@dimen/_10sdp"
                android:gravity="top" />


            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_section_three" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>