<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="card"
    android:id="@+id/cardview"
    android:layout_marginTop="@dimen/very_small_margin"
    android:layout_marginLeft="@dimen/very_small_margin"
    android:layout_marginRight="@dimen/very_small_margin"
    android:background="@color/white"
    tools:ignore="UnusedAttribute"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/logo_medium"
            android:layout_height="@dimen/logo_medium"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/company_logo"
                android:layout_width="@dimen/logo_medium"
                android:layout_height="@dimen/logo_medium" /></LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/project_no"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/small_margin"
                    android:gravity="top">

                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/fbColor"
                        android:typeface="normal"
                        android:id="@+id/text_approved"
                        android:gravity="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/small_margin"
                    android:gravity="top">

                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:typeface="normal"
                        android:id="@+id/project_name"
                        android:text="ABC"
                        android:layout_marginBottom="@dimen/very_small_margin" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/very_small_margin">

                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Project ID : " />


                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/project_id"
                    android:layout_marginRight="@dimen/small_margin" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/very_small_margin">

                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Description :-"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/descriptionOne" />


                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/project_desc" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/very_small_margin">

                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Created By : "/>


                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/created_by" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/very_small_margin">

                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Date Created : "/>


                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/very_small_margin">

                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Total Budget - "
                    android:gravity="top" />

                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_budget"
                    android:layout_marginRight="@dimen/small_margin"
                    android:gravity="top" />

                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_currency"
                    android:layout_marginRight="@dimen/small_margin"
                    android:gravity="top"
                    android:text="" />
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:id="@+id/linearLayout">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="Address :-"/>

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/address"
                            android:layout_toStartOf="@+id/imageButton2"
                            android:layout_marginRight="@dimen/small_margin" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/success_green"
                                android:id="@+id/map_text_btn"
                                android:text="VIEW ON MAP"/>

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/small_margin"
                                android:background="@drawable/map"
                                android:id="@+id/map_btn"
                                android:layout_toRightOf="@+id/map_text_btn"/>
                        </RelativeLayout>

                    </LinearLayout>

                        <!--<ImageButton-->
                            <!--android:layout_width="@dimen/_25sdp"-->
                            <!--android:layout_height="@dimen/_25sdp"-->
                            <!--android:background="@drawable/map"-->
                            <!--android:id="@+id/map_btn"-->
                            <!--android:layout_alignBottom="@+id/linearLayout"-->
                            <!--android:layout_alignParentEnd="true" />-->
                    </RelativeLayout>



        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>