<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_five"
    tools:context="com.example.sadashivsinha.mprosmart.Activities.FormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="#99ffffff">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/main_layout">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:text="My Profile"
                            android:textColor="@color/fancy_red"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center"
                            android:id="@+id/title" />


                        <ViewSwitcher
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/my_switcher"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:hint="Enter Name"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionNext"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:background="@drawable/edittext_states_red"
                                    android:layout_marginTop="@dimen/activity_vertical_margin"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textSize="15sp"
                                    android:id="@+id/name" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:hint="Enter Age"
                                        android:inputType="number"
                                        android:layout_weight="1"
                                        android:imeOptions="actionNext"
                                        android:layout_marginRight="@dimen/activity_vertical_margin"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:maxLines="1"
                                        android:background="@drawable/edittext_states_red"
                                        android:textSize="15sp"
                                        android:id="@+id/age" />

                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_weight="1"
                                        android:hint="Marital Status"
                                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:maxLength="1"
                                        android:maxLines="1"
                                        android:inputType="textCapSentences"
                                        android:imeOptions="actionNext"
                                        android:background="@drawable/edittext_states_red"
                                        android:textSize="15sp"
                                        android:id="@+id/status" />
                                </LinearLayout>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:hint="Enter Mobile No."
                                    android:inputType="number"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:imeOptions="actionNext"
                                    android:maxLength="10"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp"
                                    android:id="@+id/mobile" />

                                <AutoCompleteTextView
                                    android:id="@+id/city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:hint="Enter City"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionNext"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp" />

                                <AutoCompleteTextView
                                    android:id="@+id/state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:hint="Enter State"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionNext"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp" />

                                <AutoCompleteTextView
                                    android:id="@+id/country"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:hint="Enter Country"
                                    android:maxLines="1"
                                    android:inputType="textCapSentences"
                                    android:imeOptions="actionDone"
                                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                                    android:textColorHint="#000000"
                                    android:textColor="#000000"
                                    android:background="@drawable/edittext_states_red"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="NAME : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="@dimen/_5sdp"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:textSize="15sp"
                                        android:id="@+id/text_name"
                                        android:text=" " />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="AGE : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:id="@+id/text_age"
                                        android:text=" " />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="STATUS : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:id="@+id/text_status"
                                        android:text=" " />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="MOB NO. : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:textColorHint="#000000"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:layout_weight="1"
                                        android:id="@+id/text_mobile"
                                        android:text=" " />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="CITY : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:id="@+id/text_city"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:text=" " />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="STATE : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:id="@+id/text_state"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:text=" " />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"
                                    android:paddingLeft="@dimen/_10sdp">

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:text="COUNTRY : "/>

                                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                        android:id="@+id/text_country"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:textColorHint="#000000"
                                        android:textColor="#000000"
                                        android:textSize="15sp"
                                        android:text=" " />
                                </LinearLayout>
                            </LinearLayout>
                        </ViewSwitcher>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SAVE"
                            android:id="@+id/editBtn"
                            android:backgroundTint="@color/success_green"
                            style="@style/Widget.AppCompat.Button.Colored"/>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
