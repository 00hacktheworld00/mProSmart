<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginTop="@dimen/very_small_margin"
    android:layout_marginLeft="@dimen/very_small_margin"
    android:layout_marginRight="@dimen/very_small_margin"
    android:transitionName="card"
    android:background="@color/white"
    app:cardElevation="@dimen/_3sdp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color_grey_800"
                            android:textSize="@dimen/_15sdp"
                            android:text="WBS Name"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color_grey_800"
                            android:textSize="@dimen/_15sdp"
                            android:text=" : "
                            android:textStyle="bold" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:textColor="@color/main_color_grey_800"
                            android:text="Multilevel"
                            android:textStyle="bold"
                            android:id="@+id/wbs_name"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Activity"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Painting"

                            android:layout_weight="1"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:id="@+id/activity" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In-Progress"
                            android:layout_weight="1"
                            android:id="@+id/completed"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Resource Worked"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sadashiv"
                            android:layout_weight="1"
                            android:id="@+id/res_worked"
                            android:gravity="right" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today's Progress (%)" />

                        </LinearLayout>

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_weight="1"
                            android:id="@+id/percent_completed_today"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Progress (%)"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:layout_weight="1"
                            android:id="@+id/percent_completed_total"
                            android:gravity="right" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <ProgressBar style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="7dip"
                            android:id="@+id/progress_bar_total"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/success_green"/>

                        <ProgressBar style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="7dip"
                            android:id="@+id/progress_bar_today"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/material_light_yellow_800"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <ImageButton
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/small_margin"
                            android:background="@color/success_green"/>

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today's Progress"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>