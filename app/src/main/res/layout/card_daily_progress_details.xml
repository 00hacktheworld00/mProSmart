<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginTop="@dimen/very_small_margin"
    android:layout_marginLeft="@dimen/very_small_margin"
    android:layout_marginRight="@dimen/very_small_margin"
    android:transitionName="card"
    android:background="@color/white"
    android:elevation="@dimen/_3sdp"
    tools:ignore="UnusedAttribute">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/baby_blue"
            android:id="@+id/weather_layout">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/weather_icon"
                android:layout_margin="@dimen/very_very_small_margin"
                android:background="@drawable/weather_sunny"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/very_very_small_margin"
                android:layout_toRightOf="@+id/weather_icon"
                android:orientation="vertical">

                <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center"
                    android:text="Cloudy weather with high speed wind"
                    android:id="@+id/weather_title" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/weather_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color_grey_800"
                            android:textSize="@dimen/_15sdp"
                            android:text="WBS Name"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color_grey_800"
                            android:textSize="@dimen/_15sdp"
                            android:text=" : "
                            android:textStyle="bold" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:textColor="@color/main_color_grey_800"
                            android:text="Multilevel"
                            android:textStyle="bold"
                            android:id="@+id/wbs_name"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Activity"
                            android:layout_weight="1"
                            android:textStyle="bold" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Painting"

                            android:layout_weight="1"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:id="@+id/activity" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Target Date"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16/March/2016"
                            android:layout_weight="1"
                            android:id="@+id/target_date"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In-Progress"
                            android:layout_weight="1"
                            android:id="@+id/completed"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Percent Completed (%)"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:layout_weight="1"
                            android:id="@+id/percent_completed"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/activity_vertical_margin">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Resources Worked"
                            android:layout_weight="1" />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sadashiv"
                            android:layout_weight="1"
                            android:id="@+id/res_worked"
                            android:gravity="right" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>