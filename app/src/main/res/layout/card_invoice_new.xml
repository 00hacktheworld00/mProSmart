<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/small_margin"
    android:layout_marginLeft="@dimen/small_margin"
    android:layout_marginRight="@dimen/small_margin"
    app:cardElevation="@dimen/very_very_small_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/small_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:weightSum="1">

            <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="@dimen/_11sdp"
                android:text="ITEM ID : "/>

            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="@dimen/_11sdp"
                android:text="ITEM001"
                android:gravity="right"
                android:id="@+id/text_item_id" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:weightSum="1">

            <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="@dimen/_11sdp"
                android:text="TOTAL QUANTITY : "/>

            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="@dimen/_11sdp"
                android:text="100"
                android:gravity="right"
                android:id="@+id/text_quantity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:weightSum="1">

            <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="@dimen/_11sdp"
                android:text="QUANTITY ACCEPTED : "/>

            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="@dimen/_11sdp"
                android:text="50"
                android:gravity="right"
                android:id="@+id/text_quan_accepted" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:weightSum="1">

            <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="@dimen/_11sdp"
                android:text="UNIT COST : "/>

            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="@dimen/_11sdp"
                android:text="Rs 10"
                android:gravity="right"
                android:id="@+id/text_unit_cost" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/main_color_grey_400"
            android:layout_marginTop="@dimen/very_small_margin"
            android:layout_marginBottom="@dimen/small_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textSize="@dimen/_11sdp"
                android:text="TOTAL ITEM COST : "/>

            <com.example.sadashivsinha.mprosmart.font.HelveticaMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textSize="@dimen/_11sdp"
                android:text="0"
                android:gravity="right"
                android:id="@+id/text_total_item_cost" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>