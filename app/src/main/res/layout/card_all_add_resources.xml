<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_margin="@dimen/very_small_margin"
    android:transitionName="card"
    android:background="@color/white"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_circle"
                    android:orientation="vertical">

                    <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:id="@+id/sl_no" /></LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:background="@color/new_grey"/>

            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:orientation="horizontal">


                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/main_color_grey_800"
                                android:textSize="@dimen/_15sdp"
                                android:text="Resource ID : "
                                android:textStyle="bold"
                                android:id="@+id/title" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_15sdp"
                                android:textColor="@color/main_color_grey_800"
                                android:textStyle="bold"
                                android:id="@+id/res_id"
                                android:text="R0014" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">
                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textColor="#c0392b"
                                android:textSize="@dimen/_10sdp"
                                android:text="Resource Name : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="#c0392b"
                                android:textStyle="bold"
                                android:id="@+id/res_name"
                                android:text="ABC" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Resource Type : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/res_type"
                                android:text="Type A" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sub_layout"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Subcontractor : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/res_subcontractor"
                                android:text="Sub" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Designation : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/designation"
                                android:text="Sample Designation" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Email : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/email"
                                android:text="s@s.com" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Phone : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/phone"
                                android:text="4441451555" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Rate Per Hour : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/rate_per_hour"
                                android:text="1000" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/very_very_small_margin"
                            android:orientation="horizontal">

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_10sdp"
                                android:text="Currency : "
                                android:textStyle="bold" />

                            <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:id="@+id/currency"
                                android:text="INR" />
                        </LinearLayout>
                    </LinearLayout>


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_file_edit"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/editBtn"
                        android:layout_marginRight="@dimen/_10sdp" />
                </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>