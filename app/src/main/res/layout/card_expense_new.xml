<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_margin="@dimen/very_small_margin"
    android:transitionName="card"
    android:background="@color/white"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/ic_circle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:id="@+id/sl_no" /></LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:background="@color/new_grey"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/main_color_grey_800"
                        android:textSize="@dimen/_15sdp"
                        android:text="Line No. : "
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/main_color_grey_800"
                        android:text="1"
                        android:textStyle="bold"
                        android:id="@+id/line_no_to_show" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/main_color_grey_800"
                        android:text="A1000145"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:id="@+id/line_no" />
                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/layout_project"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginLeft="@dimen/activity_vertical_margin"
                           android:textColor="#c0392b"
                           android:textSize="@dimen/_10sdp"
                           android:text="Item Name : "
                           android:textStyle="bold" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textSize="@dimen/_10sdp"
                           android:textColor="#c0392b"
                           android:text="Sample Item"
                           android:textStyle="bold"
                           android:id="@+id/item_name" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginLeft="@dimen/activity_vertical_margin"
                           android:textSize="@dimen/_10sdp"
                           android:text="WBS : "
                           android:id="@+id/title_wbs" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textSize="@dimen/_10sdp"
                           android:text="C001"
                           android:id="@+id/text_wbs" />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginLeft="@dimen/activity_vertical_margin"
                           android:textSize="@dimen/_10sdp"
                           android:text="Activity : "
                           android:id="@+id/title_activity" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textSize="@dimen/_10sdp"
                           android:text="Sample Code Name"
                           android:id="@+id/text_activity" />
                   </LinearLayout>



                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginLeft="@dimen/activity_vertical_margin"
                           android:textSize="@dimen/_10sdp"
                           android:text="Item Description : " />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textSize="@dimen/_10sdp"
                           android:text="Sample Description"
                           android:id="@+id/item_desc" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal"
                       android:layout_gravity="center_horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginLeft="@dimen/activity_vertical_margin"
                           android:textSize="@dimen/_10sdp"
                           android:text="Quantity : " />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textSize="@dimen/_10sdp"
                           android:text="100"
                           android:id="@+id/quantity" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal"
                       android:layout_gravity="center_horizontal">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginLeft="@dimen/activity_vertical_margin"
                           android:textSize="@dimen/_10sdp"
                           android:text="UOM : " />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:textSize="@dimen/_10sdp"
                           android:text="KGs"
                           android:id="@+id/uom" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/activity_vertical_margin"
                       android:layout_marginTop="@dimen/very_very_small_margin"
                       android:orientation="horizontal">


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Total Amount : "
                           android:textColor="#2980b9" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0"
                           android:textColor="#2980b9"
                           android:id="@+id/amount" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:layout_marginBottom="@dimen/_5sdp"
                       android:layout_marginLeft="@dimen/activity_vertical_margin"
                       android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_marginRight="@dimen/small_margin"
                       android:text="Attachments : "
                       android:gravity="center" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="0"
                       android:id="@+id/no_of_attachments"
                       android:gravity="center" />

                   <ImageButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginLeft="@dimen/small_margin"
                       android:background="@drawable/add_new_button"
                       android:id="@+id/attachBtn" />
               </LinearLayout>

                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/very_small_margin"
                       android:layout_margin="@dimen/small_margin"
                       android:gravity="center"
                       android:id="@+id/text_new_quantity"
                       android:background="@drawable/edittext_states_red"
                       android:textSize="@dimen/_12sdp"
                       android:maxLines="1"
                       android:imeOptions="actionDone"
                       android:inputType="number"
                       android:hint="Enter Quantity"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Update Quantity"
                       android:gravity="center"
                       android:id="@+id/btn_update_quantity"
                       android:layout_margin="@dimen/very_small_margin"
                       android:padding="@dimen/very_small_margin"
                       android:textColor="#FFFFFF"
                       android:background="@color/baby_blue"/>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_personal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expense Type Desc : "
                            android:textColor="#2980b9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Abc"
                            android:textColor="#2980b9"
                            android:id="@+id/text_expense_type_desc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/very_very_small_margin"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount : "
                            android:textColor="#2980b9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#2980b9"
                            android:id="@+id/text_amount_personal" />
                    </LinearLayout>




                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>