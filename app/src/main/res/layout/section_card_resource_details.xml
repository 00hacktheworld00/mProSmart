<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_2sdp"
    android:id="@+id/card_resource"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESOURCE DETAILS"
                android:id="@+id/view2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/checkbox_resource"
                android:enabled="false"
                android:checked="false" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hiddenLayoutResourceDetails"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/small_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_weight="1">


                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:layout_marginLeft="@dimen/very_very_small_margin"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="@dimen/very_small_margin"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="First Name"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:layout_weight="1"
                        android:id="@+id/text_first_name"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_weight="1">


                    <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:layout_marginLeft="@dimen/very_very_small_margin"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="@dimen/very_small_margin"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="Last Name"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionNext"
                        android:textColorHint="#000000"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:id="@+id/text_last_name"
                        android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
            </LinearLayout>

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resource Type"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Resource Type"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/spinner_res_type"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_subcontractor">

                <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subcontractor"
                    android:layout_marginLeft="@dimen/very_very_small_margin"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/very_small_margin"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Choose Subcontractor"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/edittext_states_red"
                    android:id="@+id/spinner_subcontractor"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Designation"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/spinner_designation"
                android:textSize="@dimen/_10sdp" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Email ID"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:background="@drawable/edittext_states_red"
                android:id="@+id/text_email"
                android:textSize="@dimen/_10sdp" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Phone"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/text_phone"
                android:inputType="number" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Per Hour"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Rate Per Hour"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:id="@+id/text_rate_per_hour"
                android:inputType="number" />

            <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:layout_marginLeft="@dimen/very_very_small_margin"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/very_small_margin"/>

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/edittext_states_red"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/spinner_currency"
                android:text="Currency" />


            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next_resource" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>