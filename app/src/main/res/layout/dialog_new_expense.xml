<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/colorAccent">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        app:cardElevation="@dimen/_25sdp"
        app:cardBackgroundColor="@color/back_light">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_3sdp"
            app:cardBackgroundColor="#fdfdfd"
            android:id="@+id/view4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create new Expense"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="#000000"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="10dp"
                        android:text="Select Expense Type"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="15sp"
                        android:id="@+id/spinner_expense" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="Expense Description"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:imeOptions="actionDone"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:textSize="15sp"
                        android:id="@+id/expense_desc"/>
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="CREATE"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/createBtn" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</LinearLayout>