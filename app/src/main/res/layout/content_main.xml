<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:id="@+id/cardview"
    android:transitionName="card"
    android:background="@color/white"
    tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/logo_medium"
                    android:layout_height="@dimen/logo_medium"
                    android:layout_margin="@dimen/activity_horizontal_margin">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/company_logo"
                            android:layout_width="@dimen/logo_medium"
                            android:layout_height="@dimen/logo_medium"
                            android:src="@drawable/logo_two"/></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="top">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="PO Number : 4154154"
                                            android:textSize="@dimen/heading_main"
                                            android:textColor="@color/fbColor"
                                            android:layout_below="@+id/product_category"
                                            android:layout_alignParentStart="true"
                                            android:gravity="center_vertical"
                                            android:typeface="normal"
                                            android:layout_marginTop="@dimen/activity_vertical_margin"
                                            android:id="@+id/title" />
                                </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/activity_vertical_margin">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/very_small_margin">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Project No :"
                                            android:textColor="@color/new_grey" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:id="@+id/project_no"
                                            android:text="1104"
                                            android:textColor="@color/new_grey"
                                            android:layout_marginRight="@dimen/small_margin" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:gravity="right">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Vendor Code : "
                                            android:textColor="@color/new_grey"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/vendor_code"
                                            android:text="V 114"
                                            android:textColor="@color/new_grey"/>

                                </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/very_small_margin"
                            android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:gravity="left">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Date :"
                                            android:textColor="@color/new_grey" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="26/Feb/2016"
                                            android:textColor="@color/new_grey"
                                            android:layout_marginRight="@dimen/small_margin"
                                            android:id="@+id/date" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="@dimen/small_margin"
                                    android:orientation="horizontal"
                                    android:gravity="right">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="VIEW DETAILS"
                                            android:background="@color/fbColor"
                                            android:padding="@dimen/very_small_margin"
                                            android:textSize="@dimen/subheading_main"
                                            android:textColor="@color/main_color_grey_50"
                                            android:gravity="center|bottom|right"
                                            android:id="@+id/view_details_btn" />

                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>