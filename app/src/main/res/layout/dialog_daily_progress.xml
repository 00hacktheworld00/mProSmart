<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/colorAccent">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/colorAccent">
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_20sdp"
        app:cardElevation="@dimen/_25sdp"
        app:cardBackgroundColor="@color/back_light">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_margin="@dimen/_3sdp"
            app:cardBackgroundColor="#fdfdfd"
            android:id="@+id/view4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Daily Progress Report For"
                        android:gravity="center"
                        android:padding="@dimen/small_margin"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="#000000"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:textColorHint="#000000"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_states_red"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:padding="10dp"
                        android:gravity="top"
                        android:textSize="15sp"
                        android:id="@+id/text_date"
                        android:hint="Date" />

                  </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIEW REPORT"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:id="@+id/viewBtn"
                    android:background="@color/success_green"
                    style="@style/Widget.AppCompat.Button.Colored"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</LinearLayout>