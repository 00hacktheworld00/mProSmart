<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C5CAE9"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:fancy="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:weightSum="2"
                        android:orientation="horizontal">


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Timesheet"
                            android:layout_weight="1"
                            android:textColor="@color/fbColor"
                            />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" : "
                            android:textColor="@color/fbColor"
                            />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="RT001"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:id="@+id/text_res_timesheet_id" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:weightSum="2"
                        android:orientation="horizontal">


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="WBS"
                            android:layout_weight="1"
                            android:textColor="@color/fbColor"
                            />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" : "
                            android:textColor="@color/fbColor"
                            />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Abcdef"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:id="@+id/text_wbs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:weightSum="2"
                        android:orientation="horizontal">


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Activities"
                            android:layout_weight="1"
                            android:textColor="@color/fbColor"
                            />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" : "
                            android:textColor="@color/fbColor"
                            />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Abcdef"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:id="@+id/text_activities" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Resource Name"
                            android:layout_weight="1"
                            android:textColor="@color/fbColor" />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" : "
                            android:textColor="@color/fbColor"
                            />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Abcdef"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:id="@+id/text_res_name" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Total Hours"
                            android:layout_weight="1"
                            android:textColor="@color/fbColor" />


                        <com.example.sadashivsinha.mprosmart.font.HelveticaBold
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" : "
                            android:textColor="@color/fbColor"
                            />

                        <com.example.sadashivsinha.mprosmart.font.HelveticaRegular
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Abcdef"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:id="@+id/text_total_hours" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>